<Page
    x:Class="nUpdate.Administration.Views.NewProject.UpdateProviderSelectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:newProject1="clr-namespace:nUpdate.Administration.ViewModels.NewProject;assembly=nUpdate.Administration.ViewModels"
    d:DataContext="{d:DesignInstance newProject1:UpdateProviderSelectionPageViewModel}"
    d:DesignHeight="230"
    d:DesignWidth="520"
    Background="White"
    mc:Ignorable="d">

    <DockPanel Margin="20">
        <TextBlock
            DockPanel.Dock="Top"
            FontSize="12pt"
            Foreground="#003399"
            Text="Update provider" />

        <StackPanel VerticalAlignment="Center">
        <TextBlock
            VerticalAlignment="Center"
            Text="Please select the update provider that you want to use for accessing the update server."
            TextWrapping="Wrap" />

        <ListBox ItemsSource="{Binding UpdateProviderDictionary}" SelectedItem="{Binding SelectedUpdateProviderIdentifier}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <RadioButton GroupName="radioList" Content="{Binding Value}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListBox>

        </StackPanel>
    </DockPanel>
</Page>
