<Page
    x:Class="nUpdate.Administration.Views.NewProject.UpdateProviderSelectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:newProject1="clr-namespace:nUpdate.Administration.ViewModels.NewProject;assembly=nUpdate.Administration.ViewModels"
    xmlns:common="clr-namespace:nUpdate.Administration.Common;assembly=nUpdate.Administration.Common"
    d:DataContext="{d:DesignInstance newProject1:TransferProviderSelectionPageViewModel}"
    d:DesignHeight="230"
    d:DesignWidth="520"
    Background="White"
    mc:Ignorable="d">

    <DockPanel Margin="20">
        <TextBlock
            DockPanel.Dock="Top"
            FontSize="12pt"
            Foreground="#003399"
            Text="Transfer provider" />

        <StackPanel VerticalAlignment="Center">
            <TextBlock
                VerticalAlignment="Center"
                Text="Please select the update provider that you want to use for distribution of updates."
                TextWrapping="Wrap" />
            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                <RadioButton Content="Server over HTTP(S)" IsChecked="{Binding Path=UpdateProviderType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static common:UpdateProviderType.ServerOverHttp}}" />
                <RadioButton
                    Margin="10,0,0,0"
                    Content="Server over FTP(S)"
                    IsChecked="{Binding Path=UpdateProviderType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static common:UpdateProviderType.ServerOverFtp}}" />
                <RadioButton
                    Margin="10,0,0,0"
                    Content="Server over SSH"
                    IsChecked="{Binding Path=UpdateProviderType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static common:UpdateProviderType.ServerOverSsh}}" />
                <RadioButton
                    Margin="10,0,0,0"
                    Content="GitHub"
                    IsChecked="{Binding Path=UpdateProviderType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static common:UpdateProviderType.GitHub}}" />
                <RadioButton
                    Margin="10,0,0,0"
                    Content="Custom"
                    IsChecked="{Binding Path=UpdateProviderType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static common:UpdateProviderType.Custom}}" />
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Page>
